{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "./projects/app1/src/**/*spec.ts",
    "./projects/app2/src/**/*spec.ts",
    "./projects/app1/src/app/app.module.ts",
    "./projects/app2/src/app/app.module.ts",
    "./projects/app1/src/test.ts",
    "./projects/app2/src/test.ts",
    "./projects/app1/src/main.ts",
    "./projects/app2/src/main.ts"
  ]
}
